<!DOCTYPE html>
<html>
  <head>
    <title>Catarsinho</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <nav id="navbar-c" class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to home_index_path, class: "navbar-brand" do%>
      <%= image_tag ('/assets/logo-icon-blue.png'), class: 'img-nav' %>
    <% end %>

    <%= display_find_form %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-auth" aria-controls="nav-auth" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="nav-auth">
      <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to 'Apoie', find_projects_path, class:"nav-link"%>
          </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Crie Seu Projeto', new_project_path, class:"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to 'Meus Projetos', projects_path, class:"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to 'Sair', destroy_user_session_path, method: :delete , class:"nav-link"%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Cadastre-se', new_user_registration_path, class:"nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to 'Login', new_user_session_path, class:"nav-link"%>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container alert-app">
    <% if notice %>
      <div class="alert alert-success  alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>

    <%= yield %>
  </body>
</html>
