<%= form_for resource do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label 'Título' %><br />
    <%= f.text_field :title, autofocus: true, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Descrição' %><br />
    <%= f.text_area :description, class:'form-control', maxlength: 512, rows: 8 %>
  </div>

  <div class="form-group">
    <%= f.label 'Meta de Arrecadação' %><br />
    <%= f.number_field :goal, class:'form-control money', min: 1, max: 500 %>
  </div>

  <div class="form-group">
    <%= f.label 'Data de Encerramento' %><br />
    <%= f.date_field :closing_date, as: :date, min: Date.tomorrow, max: Date.today+29.days, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class:'btn btn-catarsinho' %>
  </div>
<% end %>
